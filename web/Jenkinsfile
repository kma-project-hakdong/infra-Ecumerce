pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'building the application...'
                git branch: 'main', url: 'https://github.com/kma-project-hakdong/web-Ecumerce/'
            }
        }
        stage('test') {
            steps {
                echo 'testing the application...'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying the application...'
                script {
                    sh './scripts/login-ecr.sh'
                }
            }
        }
    }
}